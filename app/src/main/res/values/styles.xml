<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark_darkened_2</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:tint">@color/gray_medium</item>
        <item name="android:statusBarColor">@color/primaryDark_darkened_3</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primaryDark_darkened_2</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/primaryDark_darkened_2</item>
        <item name="titleTextStyle">@style/TitleText</item>
    </style>

    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_btn_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@drawable/bg_btn_ripple</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/selector_bottom_navigation_text_color</item>
    </style>
</resources>
